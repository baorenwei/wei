<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/action_bar_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty">

    <TextView
        android:id="@+id/leftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twelve"
        android:padding="@dimen/six"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/rightLeftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/three"
        android:padding="@dimen/six"
        android:layout_toLeftOf="@+id/rightTextView"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/rightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/twelve"
        android:padding="@dimen/six"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:gravity="center"
        />
    </RelativeLayout>

</RelativeLayout>
